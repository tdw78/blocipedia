<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <main class="container">
      <% include ../static/partials/navbar.ejs %>

      <h1>Wikis</h1>

      <% if(currentUser) { %>
        <a href="/wikis/new" class="btn btn-success">Create a Public Wiki</a>
      <% } %>

      <% if(currentUser && currentUser.role === "Premium") { %>
        <a href="/wikis/new/list" class="btn btn-success">View Private Wikis</a>
      <% } %>

      <ul class="list-group">

        <% wikis.forEach((wiki) => { %>

         <% if(!wiki.private) { %>
           <li class="list-group-item">
             <a href="/wikis/<%= wiki.id %>"> <%- wiki.title %> </a>
           </li>
           <% } %> <% }) %>
        
      </ul>
    </main>
  </body>
</html>