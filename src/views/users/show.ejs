<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>
    <h2><%= `${user.name}'s Account Settings` %></h2>
    <h2><%= user.id %></h2>
    <h3><%= `Current Account Level: ${user.role}` %></h3>
    <a href="/users/<%= user.id %>/upgrade" class="btn btn-warning">Upgrade Account</a>
    <br>
    <br>
    <a href="/users/<%= user.id %>/downgrade" class="btn btn-danger">Downgrade Account</a>
    
   <hr>

    <h2>My Private Wikis</h2>
   
    <ul class="list-unstyled">

       <% if(wikis) { %>
         <% wikis.forEach((wiki) => { %>
      
         <li>
            <a href="/wikis/<%= wiki.id %>">
              <%- wiki.title %>
            </a>
         </li>
             <% }) %>
             <% } %>
     </ul>
     <br>
     <h3>Wiki Collaborations</h3>

     <ul class="list-unstyled">

      <% if(collaborations) { %>
        <% collaborations.forEach((collaboration) => { %>
          <% if(collaboration.wiki) { %>
            <li>
              <a href="/wikis/<%= collaboration.wiki.id %>">
                <%= collaboration.wiki.title %>    
              </a>
            </li>
         <% } %>
        <% }) %>
      <% } %>
</ul>

  </body>
</html>